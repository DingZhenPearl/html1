{
    // 使用 IntelliSense 了解相关属性。 
    // 悬停以查看现有属性的描述。
    // 欲了解更多信息，请访问: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
		{
			"name": "Run Extension",
			"type": "extensionHost",
			"request": "launch",
			"args": [
				"--extensionDevelopmentPath=${workspaceFolder}/ex1"
			],
			"outFiles": [
				"${workspaceFolder}/ex1/out/**/*.js"
			],
			"preLaunchTask": "${defaultBuildTask}"
		},

       
        {
            "type": "msedge",
            "request": "launch",
            "name": "html调试",
            "file": "${file}", // 关键：${file} 表示当前打开的文件
            "webRoot": "${workspaceFolder}"
          },
           
        {
            "name": "Python 调试程序: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "启动当前node.js文件",
            "program": "${file}",
            "console": "integratedTerminal",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
        
    ]
}